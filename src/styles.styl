@require 'fonts'
@require 'bullet-list'
@require 'section-head'
:root 
  --theme-blue #f56CB4
  
*
  box-sizing border-box
  margin 0
  padding 0

h1, h2, h3
  text-transform uppercase
  font-family 'Conv_MyriadPro-Bold'
body
  font-family 'Conv_MyriadPro-Regular'

  
.wrapper
  margin 30px auto 0
  width: 58.5%
  display: grid 
  grid-gap: 7%
  grid-template-columns: 0.6498422712933754fr 1fr
  
  
  
  
h3 
  font-size 25px
  letter-spacing .4px
 
.contact__head:before
  background-image: url(../img/contact.svg)
.skills__head:before
  background-image: url(../img/skills.svg)
.education__head:before
  background-image: url(../img/education.svg)
.software__head:before
  background-image: url(../img/software.svg)
.profile__head:before
  background-image: url(../img/profile.svg)
.experience__head:before
  background-image: url(../img/experience.svg)  




  
.intro__mugshot
  margin 0 auto
  width: 200px
  height: 200px
  background-color var(--theme-blue)
  border-radius 50%
  position relative
  
  &:before
    content ""
    position absolute
    width 230px
    height 230px
    border-radius 50%
    left -16px
    top -16px
    border 1px solid var(--theme-blue)
.intro
  margin-top 30px
  position relative
  left 10px
.intro__name
  text-align center
  font-family 'Conv_MyriadPro-Regular'
  font-size 54px
  letter-spacing 2px
  font-weight 100
  line-height 0px
  margin-top 72px
.intro__surname
  text-align center
  font-weight bold
  font-size 63px
  margin-top 16px
  letter-spacing -1px
.intro__profession
  text-align center
  font-size 25px
  text-transform uppercase
  font-family 'Conv_MyriadPro-Bold'
  
.profile
  margin-top 72px
  
.profile__description
  color: red
  margin-top -13px
  font-size 16px
  line-height 1.184em
  
.contact 
  margin-top 34px
  
      
.contact__list 
  margin-top 29px
  display grid
  grid-gap 30px 10px
  letter-spacing .6px
  grid-template-columns: 1fr 2.35fr
  
.contact__key
  font-size 20px
  text-transform uppercase
  color: var(--theme-blue)
  font-weight 600
.contact__value
  font-size 20px