.bullet-list 
  list-style none
  margin-left 3.5rem
  &__title 
    display inline-block
    font-size 1.5625rem
    letter-spacing .025rem
  &__interval
    display inline-block
    font-size 1.625rem
    margin-left .875rem
    &:before 
      content "//"
      margin-right .375rem
  &__item 
    position relative
    &:before
      content ""
      display inline-block
      position absolute
      left -2.625rem
      top .1875rem
      height: 1.25rem
      width: 1.25rem
      border-radius 50%
      background-color #000000