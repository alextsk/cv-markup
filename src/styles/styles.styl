@require 'fonts'
@require 'bullet-list'
@require 'section-head'
// @require '../components/definitions/definitions.styl'

:root 
  --theme-blue #056CB4
  
$md_breakpoint = 1100px
$sm_breakpoint = 900px

*
  box-sizing border-box
  margin 0
  padding 0

h1, h2, h3
  text-transform uppercase
  white-space nowrap
  font-family 'Conv_MyriadPro-Bold'

body
  font-family 'Conv_MyriadPro-Regular'
  display flex
  justify-content center
  padding-top 1.875rem
  
.wrapper
  width 58.5%
  display grid 
  grid-gap 7%
  grid-template-columns: 0.6498422712933754fr 1fr
  @media screen and (max-width: $md_breakpoint)
    width 90%
  @media screen and (max-width: $sm_breakpoint)
    grid-template-columns 1fr
    width 94%
      
  &__intro
    margin-top 1.875rem
    position relative
    left .625rem
    
  &__skills 
    margin-top 2.8125rem

  &__software
    margin-top 3.25rem
    
  &__experience 
    margin-top: 3.25rem

  &__experience__head
    margin-bottom 2.75rem
    
  &__contact
    margin-top 2.125rem
    
  &__education 
    @media screen and (max-width: $sm_breakpoint)
      margin-top 2.5rem
      
.contact__head:before
  background-image: url(../img/contact.svg)
.skills__head:before
  background-image: url(../img/skills.svg)
.education__head:before
  background-image: url(../img/education.svg)
.software__head:before
  background-image: url(../img/software.svg)
.profile__head:before
  background-image: url(../img/profile.svg)
.experience__head:before
  background-image: url(../img/experience.svg)  

.intro
  text-transform uppercase
  @media screen and (max-width: $sm_breakpoint)
    left 0
  &__name
    text-align center
    font-family 'Conv_MyriadPro-Regular'
    font-size 3.375rem
    letter-spacing .0125rem
    font-weight 100
    line-height 100%
    margin-top 2.875rem
    overflow-wrap break-word
    word-wrap break-word
    word-break break-all
    word-break break-word
    hyphens auto
  &__surname
    text-align center
    font-weight bold
    font-size 3.9375rem
    margin-top .0625rem
    letter-spacing -.0625rem
    line-height 77%
    font-family 'Conv_MyriadPro-Bold'
    overflow-wrap: break-word
    word-wrap break-word
    word-break break-all
    word-break break-word
    hyphens auto
  &__profession
    text-align center
    font-size 1.5625rem
    margin-top .9375rem
    text-transform uppercase
    font-family 'Conv_MyriadPro-Bold'
  &__mugshot
    margin 0 auto
    width: 12.5rem
    height: 12.5rem
    background-color var(--theme-blue)
    border-radius 50%
    position relative
    &:before
      content ""
      position absolute
      width 14.375rem
      height 14.375rem
      border-radius 50%
      left -1rem
      top -1rem
      border .0625rem solid var(--theme-blue)
    
.profile
  margin-top 4.5rem
  &__description
    margin-top -.8125rem
    font-size 1rem
    line-height 1.184rem

.point 
  display inline-block
  width 1.125rem
  height 1.125rem
  margin-right .5625rem
  border-radius 50%
  background-color #e6e6e6  
  &.active
    background-color #3d6cb0
    
.bar 
  height: 1.375rem
  background-color #e6e6e6
  .percent 
    background-color #3d6cb0
