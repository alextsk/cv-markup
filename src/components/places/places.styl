.places 
  list-style none
  &__subtitle
    text-transform uppercase
    font-size 1.5625rem
  &__title
    color #000
    display inline-block
    font-size 1.5625rem
    letter-spacing .025rem
  &__title--blue 
    color var(--theme-blue)
  &__item
    margin-bottom .75rem
    position relative
    &:before
      content ""
      display inline-block
      position absolute
      left -2.625rem
      top .1875rem
      height: 1.25rem
      width: 1.25rem
      border-radius 50%
      background-color #000000
  &__desc 
    margin-top .3125rem
  &__interval
    display inline-block
    font-size 1.625rem
    margin-left .875rem
    &:before 
      content "//"
      margin-right .375rem